{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "build_timestamp": "{{timestamp}}",
    "cri_containerd_version": "1.1.4",
    "cri_containerd_sha256": "6a3c1cd4eed732bb67b2528eb230db076c9fd30ae12893463f4608f3388c0aeb",
    "ssh_admin_net": "10.0.0.0/8",
    "kubernetes_version": "1.12.0-00",
    "kubernetes_cni_version": "0.6.0-00",
    "existing_ansible_ssh_args": "{{env `ANSIBLE_SSH_ARGS`}}",
    "ami_groups": "all",
    "ami_regions": "ap-south-1,eu-west-3,eu-west-2,eu-west-1,ap-northeast-2,ap-northeast-1,sa-east-1,ca-central-1,ap-southeast-1,ap-southeast-2,eu-central-1,us-east-1,us-east-2,us-west-1,us-west-2"
  },
  "builders": [
    {
      "name": "ubuntu-1804",
      "type": "amazon-ebs",
      "instance_type": "t2.small",
      "source_ami": "{{user `ubuntu_18_04_ami`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu/images/hvm-ssd/ubuntu-bionic-18.04-amd64-server-*",
          "root-device-type": "ebs"
        },
        "owners": [
          "099720109477"
        ],
        "most_recent": true
      },
      "ami_name": "ami-ubuntu-18.04-{{user `kubernetes_version`}}-{{user `build_timestamp`}}",
      "ami_groups": "{{user `ami_groups`}}",
      "ami_regions": "{{user `ami_regions`}}",
      "region": "{{user `build_region`}}",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "ssh_pty": true,
      "ssh_username": "ubuntu",
      "subnet_id": "{{user `build_subnet_id`}}",
      "tags": {
        "build_timestamp": "{{user `build_timestamp`}}",
        "source_ami": "{{user `ubuntu_18_04_ami`}}",
        "build_date": "{{isotime}}",
        "distribution": "Ubuntu",
        "distribution_release": "bionic",
        "distribution_version": "18.04",
        "cri_containerd_version": "{{user `cri_containerd_version`}}",
        "kubernetes_version": "{{user `kubernetes_version`}}",
        "kubernetes_cni_version": "{{user `kubernetes_cni_version`}}"
      }
    },
    {
      "name": "centos-7",
      "type": "amazon-ebs",
      "instance_type": "t2.small",
      "source_ami": "{{user `centos_7_ami`}}",
      "ami_name": "ami-centos-7-{{user `kubernetes_version`}}-{{user `build_timestamp`}}",
      "ami_groups": "{{user `ami_groups`}}",
      "ami_product_codes": "",
      "ami_regions": "{{user `ami_regions`}}",
      "region": "{{user `build_region`}}",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "ssh_username": "centos",
      "subnet_id": "{{user `build_subnet_id`}}",
      "tags": {
        "build_timestamp": "{{user `build_timestamp`}}",
        "source_ami": "{{user `centos_7_ami`}}",
        "build_date": "{{isotime}}",
        "distribution": "CentOS",
        "distribution_release": "Core",
        "distribution_version": "7",
        "cri_containerd_version": "{{user `cri_containerd_version`}}",
        "kubernetes_version": "{{user `kubernetes_version`}}",
        "kubernetes_cni_version": "{{user `kubernetes_cni_version`}}"
      }
    },
    {
      "name": "amazon-2",
      "type": "amazon-ebs",
      "instance_type": "t2.small",
      "source_ami": "{{user `amazon_2_ami`}}",
      "ami_name": "ami-amazon-2-{{user `kubernetes_version`}}-{{user `build_timestamp`}}",
      "ami_groups": "{{user `ami_groups`}}",
      "ami_regions": "{{user `ami_regions`}}",
      "region": "{{user `build_region`}}",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "ssh_username": "ec2-user",
      "subnet_id": "{{user `build_subnet_id`}}",
      "tags": {
        "build_timestamp": "{{user `build_timestamp`}}",
        "source_ami": "{{user `amazon_2_ami`}}",
        "build_date": "{{isotime}}",
        "distribution": "Amazon Linux",
        "distribution_release": "Amazon Linux 2",
        "distribution_version": "2",
        "cri_containerd_version": "{{user `cri_containerd_version`}}",
        "kubernetes_version": "{{user `kubernetes_version`}}",
        "kubernetes_cni_version": "{{user `kubernetes_cni_version`}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "while [ ! -f /var/lib/cloud/instance/boot-finished ]; do echo 'Waiting for cloud-init...'; sleep 1; done",
        "sudo apt-get -qq update && sudo apt-get -qqy install python python-pip"
      ],
      "only": [
        "ubuntu-1804"
      ]
    },
    {
      "type": "ansible",
      "playbook_file": "../ansible/playbook.yml",
      "ansible_env_vars": [
        "ANSIBLE_SSH_ARGS='{{user `existing_ansible_ssh_args`}} -o IdentitiesOnly=yes'",
        "ANSIBLE_REMOTE_TEMP='/tmp/.ansible/'"
      ],
      "extra_arguments": [
        "--extra-vars",
        "cri_containerd_version={{user `cri_containerd_version`}} cri_containerd_sha256={{user `cri_containerd_sha256`}} sshd_admin_net={{user `ssh_admin_net`}}",
        "--extra-vars",
        "kubernetes_version={{user `kubernetes_version`}} kubernetes_cni_version={{user `kubernetes_cni_version`}}"
      ]
    }
  ]
}
